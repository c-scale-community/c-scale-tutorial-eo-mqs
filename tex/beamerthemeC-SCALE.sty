\ProvidesPackage{beamerthemec-scale}

\mode<presentation>
\definecolor{cscaleblue}{RGB}{42,73,153}
\definecolor{cscalegray}{RGB}{118,113,113}

\beamer@centeredfalse

\defbeamertemplate*{frametitle}{cscale theme}{
  \vbox to 30pt{
    \vfill
    \hbox{\usebeamerfont{frametitle}{\insertframetitle}}
  }
}

\defbeamertemplate*{footline}{cscale theme}
{
\leavevmode
\begin{beamercolorbox}[wd=\paperwidth,ht=5ex,dp=1ex]{date in foot}
\qquad\hfill \usebeamerfont{date in foot} \insertdate{} \hfill \insertframenumber/\inserttotalframenumber{}\qquad\ \
\vskip 6.4pt
\end{beamercolorbox}
}

\setbeamercolor{frametitle}{fg=cscaleblue}
\setbeamercolor{title}{fg=cscaleblue}
\setbeamercolor{author}{fg=cscalegray}
\setbeamercolor{institute}{fg=cscalegray}
\setbeamercolor{date}{fg=cscalegray}
\setbeamercolor{footline}{fg=cscalegray}
\setbeamercolor{alerted text}{fg=cscaleblue}

\setbeamertemplate{navigation symbols}{}

\defbeamertemplate*{title page}{customized}[1][]
{
\vbox to \textheight {
  \vskip 4.7mm
  \null\hskip 6mm \begin{minipage}{117.7mm}
  {\Large\color{cscaleblue}{C-SCALE} \raisebox{-2mm}{\includegraphics[height=1.06\baselineskip]{C-SCALELogo.pdf}}}\par
  {\color{cscaleblue}{Copernicus â€“ eoSC AnaLytics Engine}}

  \smallskip
  \usebeamerfont{title}\color{cscaleblue}{\inserttitle}\par
  \usebeamerfont{subtitle}\color{cscaleblue}{\insertsubtitle}\null\par

  \vskip 1.6mm
  \begin{raggedleft}
  \usebeamerfont{author}\color{cscalegray}{\insertauthor}\par
  \end{raggedleft}

  \vskip 6.8mm
  \hfill\usebeamerfont{date}\color{cscalegray}{\insertdate}\hfill\null
  \end{minipage}
  }
}

